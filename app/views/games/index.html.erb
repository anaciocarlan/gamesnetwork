<h1>Listing games</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Publisher</th>
    <th>Year</th>
    <th>Genre</th>
    <th>Platform</th>
    <th>Description</th>
    <th>Picture</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.id %></td>
    <td><%= game.title %></td>
    <td><%= game.publisher %></td>
    <td><%= game.year %></td>
    <td><%= game.genre %></td>
    <td><%= game.platform %></td>
    <td><%= game.description %></td>
    <td><%= game.picture %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

